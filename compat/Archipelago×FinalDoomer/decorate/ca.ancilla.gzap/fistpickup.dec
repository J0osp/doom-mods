ACTOR FDFistPickupAP : FDFistPickup replaces FDFistPickup {
  Alpha 0.0
  States {
   Spawn:
    TNT1 A 0
    TNT1 A 0 A_JumpIf(CallACS("FD_itemvisuals") == 0, "GenericSpawn")
    TNT1 A 0 A_JumpIf(CallACS("FD_itemvisuals") == 2, "FancySpawn")
    TNT1 A 0 A_JumpIf(CallACS("FD_dynamicvisuals") == 1, "DynamicSpawn")
    TNT1 A 0 A_SpawnItemEx("FDFistPickupVisualPlutonia", 0,0,0, 0,0,0, 0, SXF_SETMASTER)
    TNT1 A 0 A_SpawnItemEx("FDFistPickupVisualTNT", 0,0,0, 0,0,0, 0, SXF_SETMASTER)
    TNT1 A 0 A_SpawnItemEx("FDFistPickupVisualDoom2", 0,0,0, 0,0,0, 0, SXF_SETMASTER)
    TNT1 A 0 A_SpawnItemEx("FDFistPickupVisualAliens", 0,0,0, 0,0,0, 0, SXF_SETMASTER)
    TNT1 A 0 A_SpawnItemEx("FDFistPickupVisualJPCP", 0,0,0, 0,0,0, 0, SXF_SETMASTER)
